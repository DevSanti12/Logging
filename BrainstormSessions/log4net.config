<log4net>
  <!-- MemoryAppender to capture logs during unit testing -->
  <appender name="MemoryAppender" type="log4net.Appender.MemoryAppender">
    <!-- Specify buffer size, if needed (optional) -->
    <onlyFixPartialEventData>false</onlyFixPartialEventData>
  </appender>

  <!-- Root Logger Configuration -->
  <root>
    <!-- Set the minimum level threshold -->
    <level value="DEBUG" />
    <!-- Attach MemoryAppender -->
    <appender-ref ref="MemoryAppender" />
  </root>
</log4net>