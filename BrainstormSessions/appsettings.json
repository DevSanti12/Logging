{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Email" ],
        "MinimumLevel": {
            "Default": "Debug"
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day",
                    "restrictedToMinimumLevel": "Debug"
                }
            },
            {
                "Name": "Email",
                "Args": {
                    "fromEmail": "app@example.com",
                    "pickupDirectoryLocation": "C:\\Users\\santiago_leyva", // Local folder to save .eml files
                    "restrictedToMinimumLevel": "Error",
                    "toEmail": "support@example.com"
                }
            }
        ]
    }
}
